{% extends 'base.html.twig' %}

{% block page_js %}
{% endblock %}

{% block page_topbar_content %}
{# Empty for Now #}
{% endblock %}

{% block page_content %}
<div id='doc-library'>

    <div id='library-search-panel'>
        <div class='container'>
            <div class='row'>
                <div class='span12'>

                    <form method='get' id='big-search-form' action='{{ current_url }}'>

                        <h3>Search 125 Documents</h3>

                        <input id='big-search-box' name='query' />
                        <button id='big-search-submit' class='btn btn-small' type='submit'><i class='icon-search'></i></button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class='container'>
        <div class='row'>
            <div class='span12' id='main-content'>

                {% if 1 == 1 %}
                    {% include 'pages/library/_search_results.html.twig' %}
                {% else %}
                    <p>Topic Cloud Here</p>
                {% endif %}

            </div>
        </div>
    </div>

</div>
{% endblock %}